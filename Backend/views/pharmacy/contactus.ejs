    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script>
        // Form submission handling
        document.getElementById('contactForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Show success message
            const successMsg = document.getElementById('successMessage');
            successMsg.style.display = 'block';
            
            // Scroll to success message
            successMsg.scrollIntoView({ behavior: 'smooth', block: 'center' });
            
            // Reset form after 4 seconds
            setTimeout(() => {
                this.reset();
                successMsg.style.display = 'none';
            }, 4000);
        });

        // Enhanced hover effects for contact info cards
        const contactInfos = document.querySelectorAll('.contact-info');
        contactInfos.forEach(info => {
            info.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-8px) scale(1.02)';
                this.style.boxShadow = '0 20px 40px rgba(0,0,0,0.2)';
            });
            
            info.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
                this.style.boxShadow = '0 10px 30px rgba(0,0,0,0.1)';
            });
        });

        // Form field focus effects
        const formFields = document.querySelectorAll('.form-control');
        formFields.forEach(field => {
            field.addEventListener('focus', function() {
                this.style.borderColor = '#28a745';
                this.style.boxShadow = '0 0 15px rgba(40, 167, 69, 0.2)';
                this.style.transform = 'scale(1.02)';
            });
            
            field.addEventListener('blur', function() {
                if (!this.value) {
                    this.style.borderColor = '#e0e0e0';
                    this.style.boxShadow = 'none';
                }
                this.style.transform = 'scale(1)';
            });
        });

        // Social media click effects
        const socialIcons = document.querySelectorAll('.Contact i');
        socialIcons.forEach(icon => {
            icon.addEventListener('click', function() {
                this.style.transform = 'scale(1.2) rotate(15deg)';
                setTimeout(() => {
                    this.style.transform = 'scale(1) rotate(0deg)';
                }, 300);
            });
        });

        // Page load animation
        window.addEventListener('load', function() {
            document.body.style.opacity = '0';
            document.body.style.transition = 'opacity 0.8s ease-in-out';
            setTimeout(() => {
                document.body.style.opacity = '1';
            }, 100);
        });
    </script>
    <script src="/js/contact.js"></script>
